<%= form_with(model: cart_product, url: cart_cart_product_path(cart_product), local: true, class: "needs-validation") do |form| %>
  <% if cart_product.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(cart_product.errors.count, "erreur") %> ont empêché l'enregistrement :</h4>
      <ul>
        <% cart_product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_user.admin? %>
    <div class="mb-3">
      <%= form.label :cart_id, "ID du panier", class: "form-label" %>
      <%= form.text_field :cart_id, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :product_id, "ID du produit", class: "form-label" %>
      <%= form.text_field :product_id, class: "form-control" %>
    </div>
  <% else %>
    <!-- Ces champs sont masqués mais toujours envoyés côté serveur -->
    <%= form.hidden_field :cart_id %>
    <%= form.hidden_field :product_id %>
  <% end %>

  <div class="mb-3">
    <%= form.label :quantity, "Quantité", class: "form-label" %>
    <%= form.number_field :quantity, class: "form-control", min: 1 %>
  </div>

  <div>
    <%= form.submit "Enregistrer", class: "btn btn-success" %>
  </div>
<% end %>
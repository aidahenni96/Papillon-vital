<h1 class="mb-4">Mon Panier</h1>

<% if @cart_products&.any? %>
  <table class="table table-striped table-bordered align-middle">
    <thead class="table-primary">
      <tr>
        <th>Produit</th>
        <th class="text-center">Quantité</th>
        <th class="text-end">Prix unitaire</th>
        <th class="text-end">Sous-total</th>
        <th class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% total = 0 %>
      <% @cart_products.each do |cart_product| %>
        <% subtotal = (cart_product.quantity || 1) * (cart_product.product.price || 0) %>
        <% total += subtotal %>
        <tr>
          <td><%= cart_product.product.name %></td>
          <td class="text-center"><%= cart_product.quantity %></td>
          <td class="text-end"><%= number_to_currency(cart_product.product.price) %></td>
          <td class="text-end"><%= number_to_currency(subtotal) %></td>
          <td class="text-center">
            <!-- Exemple : liens pour modifier ou supprimer -->
            <%= link_to "Modifier", edit_cart_product_path(cart_product), class: "btn btn-sm btn-outline-primary me-1" %>
            <%= link_to "Supprimer", cart_product_path(cart_product), method: :delete, data: { confirm: "Supprimer ce produit ?" }, class: "btn btn-sm btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3" class="text-end">Total :</th>
        <th class="text-end"><%= number_to_currency(total) %></th>
        <th></th>
      </tr>
    </tfoot>
  </table>

  <div class="d-flex justify-content-end">
    <%= link_to "Passer à la commande", new_order_path, class: "btn btn-success btn-lg" %>
  </div>
<% else %>
  <div class="alert alert-info" role="alert">
    Votre panier est vide.
  </div>
<% end %>

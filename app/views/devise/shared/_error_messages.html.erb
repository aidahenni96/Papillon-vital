<% if resource.errors.any? %>
  <div class="alert alert-danger" role="alert" data-turbo-cache="false">
    <h4 class="alert-heading">
      <%= pluralize(resource.errors.count, "erreur") %> empêchent l’enregistrement de ce formulaire :
    </h4>
    <ul class="mb-0">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

